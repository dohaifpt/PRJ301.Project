<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>Controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addComtroller</servlet-name>
        <servlet-class>Controller.addComtroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagementContrller</servlet-name>
        <servlet-class>Controller2.ManagementContrller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add2Controller</servlet-name>
        <servlet-class>Controller2.add2Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductTypeContrller</servlet-name>
        <servlet-class>Controller3.ProductTypeContrller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>Controller5.CustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/productlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addComtroller</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagementContrller</servlet-name>
        <url-pattern>/manalist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add2Controller</servlet-name>
        <url-pattern>/addmanage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductTypeContrller</servlet-name>
        <url-pattern>/prolist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/clist</url-pattern>
    </servlet-mapping>
</web-app>
